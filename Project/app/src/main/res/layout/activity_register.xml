<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".RegisterActivity">

    <!--    CONTAINER    -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/login_drawables">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/register_registerBtn">

            <!--    TITLE    -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/tropical"
                android:text="@string/leaf_bank"

                android:textAlignment="center"
                android:textColor="#e3efc2"
                android:textSize="55sp" />

            <!--    EMAIL_TEXT    -->
            <TextView
                android:id="@+id/register_emailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"

                android:fontFamily="@font/josefinsanslight"
                android:text="@string/email"
                android:textAllCaps="true"
                android:textColor="#e3efc2"
                android:textSize="20sp"
                android:labelFor="@id/register_emailEditText"/>

            <!--    EMAIL_EDITBOX    -->
            <EditText
                android:id="@+id/register_emailEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/editbox"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="5dp"
                android:textColor="#e3efc2"
                android:autofillHints="emailAddress"

                android:textSize="18sp"
                />

            <!--    ERMAILERROR_TEXT    -->
            <TextView
                android:id="@+id/register_emailErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="25dp"

                android:text=""
                android:textColor="#dba695"
                android:textSize="17sp"
                />

            <!--    USERNAME_TEXT    -->
            <TextView
                android:id="@+id/register_usernameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"

                android:fontFamily="@font/josefinsanslight"
                android:text="@string/username"
                android:textAllCaps="true"
                android:textColor="#e3efc2"
                android:textSize="20sp"
                android:labelFor="@id/register_usernameEditText"/>

            <!--    USERNAME_EDITBOX    -->
            <EditText
                android:id="@+id/register_usernameEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/editbox"
                android:inputType="textPersonName"
                android:paddingHorizontal="5dp"
                android:textColor="#e3efc2"
                android:autofillHints="username"

                android:textSize="18sp"
                />

            <!--    USERNAMEERROR_TEXT    -->
            <TextView
                android:id="@+id/register_usernameErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="25dp"

                android:text=""
                android:textColor="#dba695"
                android:textSize="17sp"
                />

            <!--    FULLNAME_TEXT    -->
            <TextView
                android:id="@+id/register_fullnameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"

                android:fontFamily="@font/josefinsanslight"
                android:text="@string/name"
                android:textAllCaps="true"
                android:textColor="#e3efc2"
                android:textSize="20sp"
                android:labelFor="@id/register_fullnameEditText"/>

            <!--    FULLNAME_EDITBOX    -->
            <EditText
                android:id="@+id/register_fullnameEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/editbox"
                android:inputType="textPersonName"
                android:paddingHorizontal="5dp"
                android:textColor="#e3efc2"
                android:autofillHints="name"

                android:textSize="18sp"
                />

            <!--    FULLNAMEERROR_TEXT    -->
            <TextView
                android:id="@+id/register_fullnameErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="25dp"

                android:text=""
                android:textColor="#dba695"
                android:textSize="17sp"
                />

            <!--    PASSWORD_TEXT    -->
            <TextView
                android:id="@+id/register_passwordTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"

                android:fontFamily="@font/josefinsanslight"
                android:text="@string/password"
                android:textAllCaps="true"
                android:textColor="#e3efc2"

                android:textSize="20sp"
                android:labelFor="@id/register_passwordEditText"/>

            <!--    PASSWORD_EDITBOX    -->
            <EditText
                android:id="@+id/register_passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/editbox"
                android:inputType="textPassword"
                android:paddingHorizontal="5dp"
                android:autofillHints="password"

                android:textColor="#e3efc2"
                android:textSize="18sp" />

            <!--    PASSWORD_ERROR_TEXT    -->
            <TextView
                android:id="@+id/register_passwordErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="25dp"

                android:text=""
                android:textColor="#dba695"
                android:textSize="17sp"
                />

            <!--    PASSWORD_REP_TEXT    -->
            <TextView
                android:id="@+id/register_passwordRepTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"

                android:fontFamily="@font/josefinsanslight"
                android:text="@string/passwordRep"
                android:textAllCaps="true"
                android:textColor="#e3efc2"

                android:textSize="20sp"
                android:labelFor="@id/register_passwordRepEditText"/>

            <!--    PASSWORD_EDITBOX    -->
            <EditText
                android:id="@+id/register_passwordRepEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="23dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/editbox"
                android:inputType="textPassword"
                android:paddingHorizontal="5dp"
                android:autofillHints="password"

                android:textColor="#e3efc2"
                android:textSize="18sp" />

            <!--    PASSWORD_ERROR_TEXT    -->
            <TextView
                android:id="@+id/register_passwordRepErrorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="25dp"

                android:text=""
                android:textColor="#dba695"
                android:textSize="17sp"
                />

            <!--    REGISTER_BUTTON    -->
            <Button
                android:id="@+id/register_loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:background="#00000000"
                android:fontFamily="@font/josefinsansregular"

                android:onClick="loginClick"
                android:text="Már van fiókod? Lépj be"
                android:textAlignment="textStart"
                android:textColor="#e3efc2"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--    REGISTER_BUTTON    -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register_registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_btn"
            android:fontFamily="@font/maitreeregular"
            android:onClick="registerClick"
            android:text="@string/register"
            android:textAllCaps="false"

            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>